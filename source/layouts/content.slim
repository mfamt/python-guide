= wrap_layout :layout
  - article = current_content_article

  div.container
    = partial "/layouts/partials/resource_navigation"


  - if article.references?
    div.container
      h4 References
      - article.references.each do |r|
        div = link_to_reference(r)

  - if article.dependencies?
    div.container
      h4 Dependencies
      - article.dependencies.each do |a|
        div = link_to_content_article a


  => partial "/layouts/article", locals: { article: article,  :yielded_content => yield }
